{
    "swagger": "2.0",
    "info": {
        "description": "给心阅博客网站前端提供API",
        "title": "心阅博客",
        "contact": {},
        "license": {},
        "version": "0.0.1"
    },
    "basePath": "/api/v1/",
    "paths": {
        "/PublishArticle": {
            "post": {
                "description": "用于用户发布文章",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "文章模块"
                ],
                "summary": "发布一篇文章",
                "parameters": [
                    {
                        "type": "string",
                        "description": "文章标题",
                        "name": "title",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "文章内容",
                        "name": "content",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "文章摘要",
                        "name": "summary",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{\"code\":200,\"data\":nil,\"msg\": \"发布成功！\"}",
                        "schema": {
                            "$ref": "#/definitions/controller.Result"
                        }
                    },
                    "401": {
                        "description": "{\"code\":401,\"data\":nil,\"msg\": \"后端获取文章失败！\"}",
                        "schema": {
                            "$ref": "#/definitions/controller.Result"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controller.Result": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "data": {
                    "type": "object"
                },
                "msg": {
                    "type": "string"
                }
            }
        }
    }
}